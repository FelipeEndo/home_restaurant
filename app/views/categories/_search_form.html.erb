<tr>
  <th>
    <button type="submit" class="btn btn-success">
      <i class="glyphicon glyphicon-search"></i>
    </button>
  </th>
  <th><%= number_field_tag 's[categories.id]', params['s'].try(:[], "categories.id"), class: 'form-control' %></th>
  <th><%= search_field_tag 's[categories.name]', params['s'].try(:[], "categories.name"), class: 'form-control' %></th>
  <th>
    <%= number_field_tag 's[dishes_count_from]', params['s'].try(:[], "dishes_count_from"), class: 'form-control', placeholder: 'From' %>
    <%= number_field_tag 's[dishes_count_to]', params['s'].try(:[], "dishes_count_to"), class: 'form-control', placeholder: 'To' %>  
  </th>

  <th>
    <%= number_field_tag 's[toppings_count_from]', params['s'].try(:[], "toppings_count_from"), class: 'form-control', placeholder: 'From' %>
    <%= number_field_tag 's[toppings_count_to]', params['s'].try(:[], "toppings_count_to"), class: 'form-control', placeholder: 'To' %>  
  </th>

  <th><%= select_tag 's[categories.active]', options_for_select([["TRUE", true], ["FALSE", false]], params['s'].try(:[], "categories.active")), prompt: 'Please choose', class: 'form-control' %></th>
  <th></th>
</tr>

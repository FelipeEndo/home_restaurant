  <table class="table table-hover">
    <tr>
      <th>ID</th>
      <td><%= @category.id %></td>
    </tr>
    <tr>
      <th>Category Name</th>
      <td><%= @category.name %></td>    
    </tr>

    <tr>
      <th>Dishes</th>
      <td><%= @category.dishes.pluck(:name).join(" , ") %></td>
    </tr>

    <tr>
      <th>Toppings</th>
      <td><%= @category.toppings.pluck(:name).join(" , ") %></td>
    </tr>

    <tr>
      <th>Is active ?</th>
      <td><span class="label label-<%= @category.active ? 'success' : 'danger' %>"><%= @category.active %></span></td>
    </tr>
  </table>

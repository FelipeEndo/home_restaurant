<section class="content">
  <div class="row">
  
    <div class="col-xs-12">
      <div class="text-right margin-bottom">
        <a type="button" class="btn btn-warning" data-toggle="modal" data-target="#create_category">
          <i class="fa fa-plus"></i>&nbsp; Create Category
        </a>
        <span data-action_button class="hidden">
          <a type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete_categories">
            <i class="fa fa-trash"></i>&nbsp; Delete Category
          </a>
        </span>
      </div>
      
      <div class="box">
        <div class="box-header">
          <h3 class="box-title"><b>Categories Management</b></h3>
        </div>

        <div class="box-body table-responsive">
          <!-- CHANGE HERE TO RUN index.js.erb -->
          <div id="categories"> 
            <%= render 'table' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<!-- Modal create -->
<div class="modal fade" id="create_category" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>

<!-- Modal delete -->
<%= form_with url: destroy_multiple_categories_path, method: :delete, id: 'delete_categories_form', local: true do |f| %>
  <%= f.hidden_field :category_ids %>
  <div class="modal fade" tabindex="-1" role="dialog" id="delete_categories">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <p>Are you sure to delete these categories ?</p>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Yes</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script>
  <%= render 'script.js.erb' %>
</script>
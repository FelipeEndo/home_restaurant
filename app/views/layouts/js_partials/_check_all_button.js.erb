// Check all button
$selectAllCheckBoxes = $('[data-select-all]');

$selectAllCheckBoxes.on('ifChecked', function() {
  $t = $(this);
  target_checkbox = $t.attr('data-select-target');
  $(`[${target_checkbox}]`).each(function() {
      $(this).iCheck('check');
  });
}).on('ifUnchecked', function() {
  $t = $(this);
  target_checkbox = $t.attr('data-select-target');
  $(`[${target_checkbox}]`).each(function() {
      $(this).iCheck('uncheck');
  });
})

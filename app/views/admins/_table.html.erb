<%= form_with url: admins_path, method: :get do %>
  <table class="table table-hover">
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Name</th>
      <th></th>
    </tr>

    <%= render 'search_form' %>

    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.id %></td>
        <td><%= admin.email %></td>
        <td><%= admin.name %></td>
        <td></td>
      </tr>
    <% end %>
  </table>
<% end %>

<div class="row text-center">
  <div class="col-xs-2">
    <div>  Số mục hiển thị trên trang
    <%= select_tag('',
                    options_for_select([30, 50, 100], params[:per_page]),
                    { class: 'form-control will_paginate_per_page' }) %>
    </div>
  </div>
  <div class="col-xs-6">
    <%= will_paginate @admins, { link_options: { 'data-remote': true }, renderer: BootstrapPagination::Rails } %>
  </div>
</div>

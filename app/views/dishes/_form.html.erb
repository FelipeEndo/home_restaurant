<%= simple_form_for(@dish) do |f| %>
  <div class="box-body">

    <div class="row">
      <div class="col-xs-10">
        <%= f.association :category %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-6">
        <%= f.input :name %>
      </div>
      <div class="col-xs-6">
        <%= f.label :price %>
        <%= f.text_field :price, class: 'form-control', data: { money: '' } %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10">
        <%= f.input :description %>
      </div>
    </div>

    <div class="row">
      <%= f.input :active, input_html: { class: 'i-check' } %>
    </div>

  </div>

  <div class="box-footer">
    <%= f.button :submit %>
  </div>
<% end %>

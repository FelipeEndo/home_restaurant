<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title"><b>Table Management</b></h3>

          <div class="box-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
              <div class="input-group-btn">
                <a type="button" class="btn btn-warning" data-toggle="modal" data-target="#create_table">
                  <i class="fa fa-plus"></i>&nbsp; Create Table
                </a>
              </div>
            </div>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>ID</th>
              <th>Table Name</th>
              <th>Number of Seats</th>
              <th>Is active ?</th>
              <th>Action</th>
            </tr>
          <% @tables.each do |table| %>
            <tr>
              <td><%= table.id %></td>
              <td><%= table.name %></td>
              <td><%= table.seat_number %></td>
              <td><span class="label label-<%= table.active ? 'success' : 'danger' %>"><%= table.active %></span></td>
              <td>
                <%= link_to edit_table_path(table) do %>
                  <i class="fa fa-edit"></i>&nbsp;&nbsp;
                <% end %>
 
                <a type="button" data-toggle="modal" data-target="#delete_table">
                  <i class="fa fa-trash"></i>&nbsp;
                </a>
                
                <%= render partial: 'modal_delete', locals: { table: table } %>
              </td>
            </tr>
          <% end %>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
  </div>
</section>


<!-- Modal create -->
<div class="modal fade" id="create_table" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
